              <img  class="aspect-video w-96 rounded-t-2xl object-cover object-center" src="{{ $pet.PictureUrl }}" alt="{{ $pet.Name }}" />
              <div class="flex flex-row items-center justify-between p-4">
                <div>
                  <h2 class="text-2xl font-medium text-slate-600">{{ $pet.Name }}</h2>
                  <h3 class="text-smf font-light">Owner: {{ $pet.Owner }}</h3>
                </div>
                {{ if $pet.TheBest }}
                <p>ğŸ’•</p>
                {{ end }}
              </div>
            </div>
            {{ end }}
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
{{ end }}
